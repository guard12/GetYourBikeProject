@model BikeShopWeb.Models.Product

@{
    ViewBag.Title = "Sell a bike";
}

@{
    var message = ViewBag.SuccessMsg;
}

<head>
    <link href="~/Content/shop-homepage.css" rel="stylesheet">  
</head>

<body>
        <div class="row">
            <div class="col-md-8 col-lg-offset-2">
                <p class="homepagename text-center">Sell a bike</p>

            </div>
        </div>
   
        @using (Html.BeginForm("Create", "Products", FormMethod.Post, new { enctype = "multipart/form-data", }))
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <hr />
               
                    <h4>Please fill up the form with correct information</h4>

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        <div class="col-md-10">
                            <label>Name:</label>
                            @Html.EditorFor(model => model.productName, new { htmlAttributes = new { @class = "form-control", placeholder = "Specialized Pro" } })
                            @Html.ValidationMessageFor(model => model.productName, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-10">
                            <label>Price(DKK):</label>
                            @Html.EditorFor(model => model.price, new { htmlAttributes = new { @class = "form-control", placeholder = "2500" } })
                            @Html.ValidationMessageFor(model => model.price, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-10">
                            <label>Choose Category:</label>
                            @Html.DropDownList("ProductCategoryID", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.ProductCategoryID, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-10">
                            <label>Description:</label>
                            <br />
                            @Html.TextAreaFor(model => model.productDescription, 7, 40, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.productDescription, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-10">
                            <label>Upload image:</label>
                            <input type="file" name="UploadedFile" />
                        </div>
                    </div>




                    <div class="form-group">
                        <div class="col-md-10">
                            <input type="submit" value="Create" class="btn btn-success" id/>

                            @Html.ActionLink("Cancel", "Index")

                        </div>
                    </div>
                </div>
        }


    <script type="text/javascript">
    var message = '@message';
    if(message){
        alert(message);
    }
    </script>
        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
          
        }

</body>
